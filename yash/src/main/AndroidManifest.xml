        </activity>
        <activity android:name=".view.dashboard.MainScreen" android:screenOrientation="portrait"></activity>

        <activity
            android:name=".view.login.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">

        </activity>
        <activity
            android:name=".view.youtube.VideoListDemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:label="@string/videolist_demo_name">

            <!--
            <meta-data
                android:name="@string/minVersion"
                android:value="13" />
